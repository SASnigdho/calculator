<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/colorABackground"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/expression_tv_Id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="40sp"
            android:gravity="end"
            android:ellipsize="start"
            android:singleLine="true"
    />

    <TextView
            android:id="@+id/result_tv_Id"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:gravity="end"
            android:ellipsize="end"
            android:singleLine="true"
    />
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/allClear_tv_Id"
                    style="@style/ActionButtonStyle"
                    android:text="AC"
            />

            <TextView
                    android:id="@+id/openParentheses_tv_Id"
                    style="@style/ActionButtonStyle"
                    android:text="("
            />

            <TextView
                    android:id="@+id/closeParentheses_tv_Id"
                    style="@style/ActionButtonStyle"
                    android:text=")"
            />

            <TextView
                    android:id="@+id/divide_tv_Id"
                    style="@style/ActionButtonStyle"
                    android:text="/"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/seven_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="7"
            />

            <TextView
                    android:id="@+id/eight_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="8"
            />

            <TextView
                    android:id="@+id/nine_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="9"
            />

            <TextView
                    android:id="@+id/mul_tv_Id"
                    style="@style/ActionButtonStyle"
                    android:text="*"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/four_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="4"
            />

            <TextView
                    android:id="@+id/five_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="5"
            />

            <TextView
                    android:id="@+id/six_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="6"
            />

            <TextView
                    android:id="@+id/minus_tv_Id"
                    style="@style/ActionButtonStyle"
                    android:text="-"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/one_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="1"
            />

            <TextView
                    android:id="@+id/two_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="2"
            />

            <TextView
                    android:id="@+id/three_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="3"
            />

            <TextView
                    android:id="@+id/plus_tv_Id"
                    style="@style/ActionButtonStyle"
                    android:text="+"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/dot_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="."
            />

            <TextView
                    android:id="@+id/zero_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="0"
            />

            <TextView
                    android:id="@+id/back_tv_Id"
                    style="@style/NumberButtonStyle"
                    android:text="BACK"
            />

            <Button
                    android:id="@+id/equal_tv_Id"
                    style="@style/ActionButtonStyle"
                    android:text="="
            />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>